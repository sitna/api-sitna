<div class="tc-ctl-draw-tools">
    <button class="tc-ctl-btn tc-ctl-draw-btn-new" title="{{tooltip}}">{{i18n "new"}}</button>
    <button class="tc-ctl-btn tc-ctl-draw-btn-undo" disabled title="{{i18n "undo"}}">{{i18n "undo"}}</button>
    <button class="tc-ctl-btn tc-ctl-draw-btn-redo" disabled title="{{i18n "redo"}}">{{i18n "redo"}}</button>
    <button class="tc-ctl-btn tc-ctl-draw-btn-end" disabled title="{{i18n "end"}}">{{i18n "end"}}</button>
    <button class="tc-ctl-btn tc-ctl-draw-btn-cancel" title="{{i18n "cancel"}}">{{i18n "cancel"}}</button>
</div>
{{#if styling}}
<div class="tc-ctl-draw-style">
    {{i18n "strokeColor"}}
    <input type="color" class="tc-ctl-col tc-ctl-draw-str-c" value="{{strokeColor}}" title="{{i18n "selectColor"}}" />
    {{i18n "strokeWidth"}}
    <div class="tc-ctl-draw-str-w-watch" style="border-bottom-width:{{strokeWidth}}px;"> </div>
    <input type="number" class="tc-ctl-draw-str-w tc-textbox" value="{{strokeWidth}}" min="1" max="15" />
</div>
{{/if}}

