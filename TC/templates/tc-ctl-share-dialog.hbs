<div class="tc-ctl-share-qr-dialog tc-modal">
    <div class="tc-modal-background tc-modal-close"></div>
    <div class="tc-modal-window">
        <div class="tc-modal-header">
            <h3>[[qrCode]]</h3>
            <div class="tc-modal-close" title="[[close]]"></div>
        </div>
        <div class="tc-modal-body">
            <div class="tc-ctl-share-qrcode"></div>      
            <div class="tc-ctl-share-qr-alert tc-alert tc-alert-warning tc-hidden">
                <p>[[qrAdvice]]</p>
            </div>
        </div>
        <div class="tc-modal-footer">
            <button type="button" class="tc-button tc-modal-close">[[close]]</button>
        </div>
    </div>
</div>
