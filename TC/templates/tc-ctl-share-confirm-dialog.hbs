<div class="tc-ctl-share-confirm-dialog tc-modal">
    <div class="tc-modal-background tc-modal-close"></div>
    <div class="tc-modal-window">
        <div class="tc-modal-header">
            <h3>{{i18n "share"}}</h3>
            <div class="tc-modal-close"></div>
        </div>
        <div class="tc-modal-body">
            {{message}}
        </div>
        <div class="tc-modal-footer">
            <button type="button" class="tc-button tc-modal-ok">{{i18n "yes"}}</button>
            <button type="button" class="tc-button tc-modal-close">{{i18n "no"}}</button>
        </div>
    </div>
</div>
